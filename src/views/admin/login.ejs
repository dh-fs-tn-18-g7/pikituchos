<body>



    <section>
        <main class="boxLogin">
            <div>
                <img src="/img/home/pikituchos-logo-txt.png" alt="" />
                <h2>Bem Vindo</h2>
            </div>

            <form action="/admin/login" method="POST">
    <!-- Formulario configurado para enviar uam requisição do tipo POST -->

                <div>
                    <label for="email">Email:<input class="input-login" name = "email" type="email" id="email" /></label>
                </div>
                <div class="inputSenha">
                    <label for="password">Senha:<input class="input-login" type="password" name="password"id="password" /></label>

                    <div>
                        <a href="/cadastro">Esqueci minha senha</a>
                    </div>
                </div>

                <div class="boxBtn">
                    <button type = "submit"class="btn-login">ENTRAR</button>

                    <div>
                        <a href="/cadastro.html">Ainda não é cadastrado?</a>
                    </div>
                </div>
            </form>



        </main>

</body>

