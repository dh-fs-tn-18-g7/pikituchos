

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title><%= pageTitle %></title>
    <!-- --------------------------------------------------------- -->
    <link rel="icon" href="img/logo.svg" type="svg+xml">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <base href="/" target="_blank"> -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- [ styles ] 
    ==================================================== -->
    <link rel="stylesheet" href="stylesheets/globals/global.css">
    <link rel="stylesheet" href="stylesheets/globals/swiper-bundle.min.css">
    <link rel="stylesheet" href="stylesheets/home/home.css">
    <!-- [ scripts ] 
    ==================================================== -->
    <script src="js/globals/swiper-bundle.min.js"></script>
    <script src="js/globals/global.js" defer></script>
    <script src="js/home/home.js" defer></script>
</head>
<body>
        
    <%- include( "includes/appbar.ejs" ) %>

    <main>
        
        <!-- [ banner section ]
        ========================================================= -->
        <banner-section>
            <slider>
                <slide id="slide00">
                    <left>
                        <img src="img/home/mamae-e-bebe.svg" alt="" oferta="logo">
                        <img src="img/home/ofertas/sabonete.png" alt="" oferta="img1">
                    </left>
                    <right>
                        <section>
                            <img src="img/home/ofertas/img-oferta02.webp" alt="" oferta="img2">
                        </section>
                    </right>
                    <h2 oferta="img2">Venha conferir a semana da Mamãe e Bebê com 70% off em qualquer produto da linha meu bebê.</h2>
                </slide>
                
                <slide id="slide01">
                    <left>
                        <footer slide01>
                            <p title-pk="3 peças">3 peças</p>
                            <p title-pk="por">por</p>
                            <p title-pk="R$ 59,90">R$ 59,90</p>
                        </footer>
                        <p slide01>FRETE GRÁTIS PARA TODO BRASIL</p>
                    </left>
                    <right>
                        <img src="img/home/ofertas/kit-macacao.webp" alt="" oferta2="img1">
                    </right>
                </slide>
                
                <slide id="slide02">
                    <left>
                        <footer slide02>
                            <img src="img/home/ofertas/60off.png" alt="" oferta3="img60off">
                            <strike>R$1399,90</strike>
                            <p title-pk="Aproveite agora">Aproveite agora</p>
                        </footer>
                        <div>
                            <p slide02="1">PREÇOS A PARTIR</p><br>
                            <p slide02="2">DE R$449,90</p>
                        </div>
                    </left>
                    <right>
                        <img src="img/home/ofertas/stroller.png" alt="" oferta3="img1">
                    </right>
                </slide>
                
                <img class="slider-btn slider-btn-next" src="img/home/arrowRight.svg" alt="">
                <img class="slider-btn slider-btn-prev" src="img/home/arrowLeft.svg" alt="">
            </slider>
        </banner-section>
        
        <!-- [ highlights section ]
        ========================================================= -->
        <article class="highlights">
            <header intro="l">
                <title-pk title-pk="Produtos mais procurados" color="var(--cp05)"></title-pk>
            </header>
            <% if( products.length ) { %>
            <slider-spot>
                <slider class="swiper" slider-heighlights>
                    <slider-modules class="swiper-wrapper">
                        <% for( let product of products ) { %>
                            <% if ( product.type == "Acessórios" ) { %>
                             
                            <slide class="swiper-slide" intro="b">
                                <card-pk
                                    name="<%= product.title %>" 
                                    desc="<%= product.description %>"
                                    real="<%= product.price.split( "." ).shift() %>" 
                                    cents="<%= product.price.split( "." ).pop() %>"
                                    src="<%= product.cover %>" 
                                    alt=""
                                    btn="Ver detalhes"
                                    url="/admin/product-details/<%= product.id %>"
                                ></card-pk>
                            </slide>
                            <% } %>
                            
                            <% } %>


                    </slider-modules>
                    <div class="swiper-pagination"></div>
                </slider>
                <div class="swiper-button-next" swiper="h-n" intro="l"></div>
                <div class="swiper-button-prev" swiper="h-p" intro="r"></div>
            </slider-spot>
            <center-btn intro="t">
                <button-pk name="Ver mais" color="" width="50%"></button-pk>
            </center-btn>
            <% } %>
        </article>

        
        <!-- [ yourBaby section ]
        ========================================================= -->
        <article class="yourbaby">
            <spot intro="l">
                <wave></wave>
                <wave></wave>
                <wave></wave>
                <wave-pix>
                    <img src="img/home/mc.webp">
                </wave-pix>
            </spot>
            <footer>
                <header intro="r">
                    <title-pk title-pk="Seu pequeno é nossa prioridade" color="var(--cp06)"></title-pk>
                </header>
                <p intro="b">Nossa meta é trazer inovação e tudo que há de melhor para seu bebê, para garantir à
                    mamãe e seu pequeno todo o conforto e alegria que a vida pode oferecer.
                    <br> <br>
                    É incrível como algo tão pequenino pode te fazer sentir algo tão grande.
                </p>
            </footer>
        </article>
        
        <!-- [ sample-products section ]
        ========================================================= -->
        <section class="sample-products">
            <article>
                <header>
                    <title-pk title-pk="Moda e acessórios para meninos" color="var(--cp05)" intro="r"></title-pk>
                </header>
                <% if( products.length ) { %>
                <slider-spot>
                    <slider class="swiper" slider-0-1anos>
                        <slider-modules class="swiper-wrapper">
                            <% for( let product of products ) { %>
                                <% if ( product.genre == "Masculino" ) { %>
    
                                <slide class="swiper-slide" intro="b">
                                    <card-pk
                                        name="<%= product.title %>" 
                                        desc="<%= product.description %>"
                                        real="<%= product.price.split( "." ).shift() %>" 
                                        cents="<%= product.price.split( "." ).pop() %>"
                                        src="<%= product.cover %>" 
                                        alt=""
                                        btn="Ver detalhes"
                                        url="/admin/product-details/<%= product.id %>"
                                    ></card-pk>
                                </slide>
                                <% } %>
                                <% } %>
    
    
                        </slider-modules>
                        <div class="swiper-pagination"></div>
                    </slider>
                    <div class="swiper-button-next" swiper="01-n" intro="l"></div>
                    <div class="swiper-button-prev" swiper="01-p" intro="r"></div>
                </slider-spot>
                <center-btn intro="t">
                    <button-pk name="Ver mais" color="" width="50%"></button-pk>
                </center-btn>
                <% } %>
            </article>

            <article>
                <header>
                    <title-pk title-pk="Moda e acessórios para meninas" color="var(--cp05)" intro="l"></title-pk>
                </header>
                <% if( products.length ) { %>
                <slider-spot>
                    <slider class="swiper" slider-2-3anos>
                        <slider-modules class="swiper-wrapper">
                            <% for( let product of products ) { %>
                                <% if ( product.genre == "Feminino" ) { %>
    
                                <slide class="swiper-slide" intro="b">
                                    <card-pk
                                        name="<%= product.title %>" 
                                        desc="<%= product.description %>"
                                        real="<%= product.price.split( "." ).shift() %>" 
                                        cents="<%= product.price.split( "." ).pop() %>"
                                        src="<%= product.cover %>" 
                                        alt=""
                                        btn="Ver detalhes"
                                        url="/admin/product-details/<%= product.id %>"
                                    ></card-pk>
                                </slide>
                                <% } %>
                                <% } %>
    
    
                        </slider-modules>
                        <div class="swiper-pagination"></div>
                    </slider>
                    <div class="swiper-button-next" swiper="23-n" intro="l"></div>
                    <div class="swiper-button-prev" swiper="23-p" intro="r"></div>
                </slider-spot>
                <center-btn intro="t">
                    <button-pk name="Ver mais" color="" width="50%"></button-pk>
                </center-btn>
                <% } %>
            </article>
        </section>
        
        <!-- [ testimonials section ]
        ========================================================= -->
        <article class="testimonials">
            <header>
                <p title-pk="O que outras mamâes estão dizendo" intro="r">O que outras mamâes estão dizendo</p>
                <p title-pk="sobre nossos serviços" intro="l">sobre nossos serviços</p>
            </header>
            <section intro="b">
                <% for( mom of moms ) { %>
                <card test-item>
                    <card-home>
                        <picture>
                            <img src="img/home/testimonials/<%= mom.pix %>" alt="">
                        </picture>
                        
                        <p title-pk="<%= mom.name %>" style="font-size: 1.3rem; color: var( --cp05 )"><%= mom.name %></p>
                        
                        <testimonial><%= mom.text %></testimonial>
                    </card-home>
                </card>
                <% } %>
            </section>
        </article>

    </main>

    <%- include( "includes/whatsapp-bubble" ) %>
        
    <%- include( "includes/footer.ejs" ) %>
    <!-- <page-footer></page-footer> -->

</body>
</html>


